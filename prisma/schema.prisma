// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  submissions   Submission[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Submission {
  id              String   @id @default(cuid())
  ownerEmail      String
  templateFamily  String   @default("mtl-code")
  templateVariant String   // "mtl-code-1" | "mtl-code-2" | "mtl-code-3"
  createdAt       DateTime @default(now())
  primaryColor    String
  secondaryColor  String
  scale           Int      // 1 | 2 | 3
  formats         String   @default("[\"png\"]") // JSON array of formats: ["png", "jpg", "webp", "pdf"]
  eventTitle      String
  venueName       String
  addressLine     String
  cityLine        String
  eventDate       DateTime
  doorTime        String   @default("18:00") // Time in HH:MM format (24-hour), default 6:00 PM
  people          String   // JSON array of people
  uploadUrls      String   // JSON array of upload URLs
  outputs         String?  // JSON array of output objects: [{url: string, format: string, mimeType: string}]
  
  user            User?    @relation(fields: [ownerEmail], references: [email])
  
  @@index([ownerEmail])
  @@index([createdAt])
}

// ============================================================================
// Node Graph Template Storage (Phase 1)
// ============================================================================

model Template {
  id          String   @id @default(cuid())
  family      String   @unique // e.g., "mtl-code", "code-a-quebec"
  name        String
  title       String
  format      String   @default("html") // "node" | "html"
  version     Int      @default(1) // Schema version for migrations
  width       Int
  height      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Node graph data (stored as JSON)
  schema      String?  // JSON string of TemplateSchema (for node format)
  
  nodes       TemplateNode[]
  
  @@index([family])
  @@index([format])
}

model TemplateNode {
  id          String   @id @default(cuid())
  templateId  String
  nodeId      String   // ID from node graph
  type        String   // "text" | "image" | "shape" | "group"
  data        String   // JSON string of node data
  parentId    String?  // For nested groups
  order       Int      // Display order
  
  template    Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  parent      TemplateNode? @relation("NodeHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    TemplateNode[] @relation("NodeHierarchy")
  
  @@index([templateId])
  @@index([parentId])
  @@index([nodeId])
}

